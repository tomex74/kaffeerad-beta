{
  "name": "kaffeerad.berlin-beta",
  "version": "1.0.0",
  "description": "A work-in-progress repository for the KaffeeRad Berlin beta. This repo will host the source code, configuration, and documentation for the public-facing site and related services.",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t kaffeerad-berlin:latest .",
    "docker:build-dev": "docker build -f Dockerfile.dev -t kaffeerad-berlin:dev .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.local kaffeerad-berlin:latest",
    "docker:run-dev": "docker run -p 3000:3000 -v $(pwd):/app kaffeerad-berlin:dev",
    "docker:up": "docker-compose up -d",
    "docker:up-dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f kaffeerad-berlin",
    "docker:shell": "docker exec -it kaffeerad-berlin sh",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "next": "^15.4.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "zod": "^4.0.16"
  }
}
